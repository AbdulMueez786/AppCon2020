<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:background="@drawable/reactbgr"
        >
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <ImageView
                android:id="@+id/react1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cheer1"
                android:padding="10dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/react2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/cheer2" />
            <ImageView
                android:id="@+id/react3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/cheer3"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/react4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/cheer4"
                android:layout_weight="1" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>